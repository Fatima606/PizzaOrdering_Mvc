@model PizzaOrdering_Mvc.DTO.EditOrderViewModel

<h1>Edit Pizza</h1>

<form asp-action="EditOrders" method="post" onsubmit="return validateForm()">
    <input type="hidden" asp-for="PizzaId" />
    <div>
        <label>Select Size</label>
        @Html.DropDownList("PizzaSize",new SelectList(ViewBag.Sizes,"SizeId","PizzaSize"))
    </div>
    <br />
    <div>
        <label>Select Base</label>
        @Html.DropDownList("PizzaBase",new SelectList(ViewBag.Bases,"baseId","BaseName"))
    </div>
    <br />
    <div>
        <label>Select 3 Toppings</label>
        <br />
        @foreach (var topping in ViewBag.Toppings)
        {
            <div class="form-check">
                <input type="checkbox" class="topping-checkbox" name="PizzaToppings" value="@topping.ToppingId"
                   @(Model.PizzaToppings != null && Model.PizzaToppings.Contains(topping.ToppingId) ? "checked" : "") />
                <label>@topping.ToppingName</label>
            </div>
        }
    </div>
    <br />
    <button type="submit">Submit</button>

</form>

<script>
    function validateForm() {
        const checkboxes = document.querySelectorAll('.topping-checkbox:checked');
        if (checkboxes.length > 3) {
            alert('You can select up to 3 toppings only.');
            return false;
        }
        return true;
    }
</script>
