@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
<div>
    <div>
        <h3>Famous Topping : </h3>
        <label>@ViewBag.maxToppingsName</label>
        <label>@ViewBag.maxToppingPercentage</label>
    </div>
    <div>
        <h3>Least Rated Topping : </h3>
        <label>@ViewBag.minToppingsName</label>
        <label>@ViewBag.minToppingPercentage</label>
    </div>
</div>



